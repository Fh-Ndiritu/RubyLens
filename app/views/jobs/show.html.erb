<div class="bg-gray-100 m-auto">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto py-10">
      <div class="bg-white shadow rounded-lg" data-controller="job" data-job-id-value="3508" data-job-apply-click-event-value="Clicked apply">
        <div class="bg-white px-4 py-5 sm:px-6 md:sticky md:top-0 rounded-t-lg border-b border-gray-200">
          <div class="flex flex-col md:flex-row items-start gap-5">
            <img class="flex-shrink-0 h-10 sm:h-14 w-10 sm:w-14 object-contain rounded-lg" alt="Arrows logo" 
             src="<%= display_logo(@job.company_logo) %>">
            <div class="w-full">
              <div class="flex flex-col md:flex-row justify-between">
                <div>
                  <h1 class="text-xl sm:text-2xl font-bold leading-7 text-gray-900"><%=@job.title %></h1>
                  <p class="text-black font-medium block" ><%=@job.company %></a>
                </div>
                <div class="flex-shrink-0 mt-2 sm:mb-2 md:mb-0 md:md-0">
                  <a 
                  class="inline-flex items-center px-4 py-2 border border-transparent 
                  text-sm font-medium rounded-md shadow-sm bg-yellow-600 hover:bg-black 
                  focus:outline-none focus:ring-2 focus:ring-offset-2" 
                  data-action="click->job#onApply" 
                  href="<%=@job.apply_url %>"
                  >
                  Apply now
                  </a>
                </div>
              </div>
              <div class="mt-1 flex flex-col sm:mt-0 gap-2">
                <div class="mt-2 flex items-center text-sm text-gray-500">
                  <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                    <path d="M2 13.692V16a2 2 0 002 2h12a2 2 0 002-2v-2.308A24.974 24.974 0 0110 15c-2.796 0-5.487-.46-8-1.308z"></path>
                  </svg> <%=@job.job_type %>
                </div>
                <% if@job.remote %>
                <div class="flex items-center text-sm text-gray-500">
                  <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                  </svg> <%=@job.remote %>
                </div>
                <% end %>
                <div class="flex flex-shrink-0 items-center text-sm text-gray-500">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400">
                    <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM6.262 6.072a8.25 8.25 0 1010.562-.766 4.5 4.5 0 01-1.318 1.357L14.25 7.5l.165.33a.809.809 0 01-1.086 1.085l-.604-.302a1.125 1.125 0 00-1.298.21l-.132.131c-.439.44-.439 1.152 0 1.591l.296.296c.256.257.622.374.98.314l1.17-.195c.323-.054.654.036.905.245l1.33 1.108c.32.267.46.694.358 1.1a8.7 8.7 0 01-2.288 4.04l-.723.724a1.125 1.125 0 01-1.298.21l-.153-.076a1.125 1.125 0 01-.622-1.006v-1.089c0-.298-.119-.585-.33-.796l-1.347-1.347a1.125 1.125 0 01-.21-1.298L9.75 12l-1.64-1.64a6 6 0 01-1.676-3.257l-.172-1.03z" clip-rule="evenodd"></path>
                  </svg> <%=@job.location %>
                </div>
                <% if@job.salary %>
                  <div class="flex items-center text-sm text-gray-500">
                    <svg xmlns="http://www.w3.org/2000/svg" class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                    </svg> <%=@job.salary %>
                  </div>
                  <% end %>

